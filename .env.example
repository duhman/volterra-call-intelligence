# Supabase Configuration (Cloud - Volterra)
# Project: your-supabase-project-id
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_cloud_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_cloud_service_role_key_here

# Admin Authentication
ADMIN_PASSWORD=your_admin_password_here

# Telavox API (per-agent keys stored in telavox_api_keys table)
# Optional: Default Telavox API key (fallback when no agent-specific key)
# DEFAULT_TELAVOX_API_KEY=your_default_telavox_api_key_here

# ElevenLabs API (for Scribe transcription)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Optional: Override API base URL (defaults to EU for GDPR compliance)
# ELEVENLABS_API_BASE=https://api.eu.residency.elevenlabs.io

# OpenAI API (for AI summaries)
OPENAI_API_KEY=your_openai_api_key_here

# HubSpot Integration
HUBSPOT_PRIVATE_ACCESS_TOKEN=your_hubspot_private_app_token_here
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_here

# Slack (consent approvals)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Optional: Cron job authentication
# CRON_SECRET=your_cron_secret_here

# Testing Configuration (uses same Cloud Supabase in test mode)
TEST_SUPABASE_URL=https://your-project.supabase.co
TEST_SUPABASE_ANON_KEY=your_cloud_anon_key_here
TEST_SUPABASE_SERVICE_KEY=your_cloud_service_role_key_here
TEST_ADMIN_PASSWORD=test_password_123
